               Source="resources/whitePawn.png"
               Grid.Column="6"
               Grid.Row="7"></Image>
        <Image x:Name="WhitePawnG"
               Source="resources/whitePawn.png"
               Grid.Column="7"
               Grid.Row="7"></Image>
        <Image x:Name="WhitePawnH"
               Source="resources/whitePawn.png"
               Grid.Column="8"
               Grid.Row="7"></Image>
