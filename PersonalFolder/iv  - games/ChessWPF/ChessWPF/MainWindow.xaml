               Grid.Row="7"
               Grid.Column="2"></Label>
        <Label Background="PaleVioletRed"
               Grid.Row="7"
               Grid.Column="4"></Label>
        <Label Background="PaleVioletRed"
               Grid.Row="7"
               Grid.Column="6"></Label>
        <Label Background="PaleVioletRed"
               Grid.Row="7"
               Grid.Column="8"></Label>
        <Label Background="PaleVioletRed"
               Grid.Row="8"
               Grid.Column="1"></Label>
