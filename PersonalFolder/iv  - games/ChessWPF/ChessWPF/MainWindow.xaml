        <!--#region Pawns-->
        <Image x:Name="RedPawnA"
               Source="resources/redPawn.png"
               Grid.Column="1"
               Grid.Row="2"></Image>
        <Image x:Name="RedPawnB"
               Source="resources/redPawn.png"
               Grid.Column="2"
               Grid.Row="2"></Image>
        <Image x:Name="RedPawnC"
               Source="resources/redPawn.png"
